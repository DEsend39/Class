#include <iostream>

using namespace std;

int main() {
  int a, b;

  std::cout << "Введите два числа: ";
  std::cin >> a >> b;

  int *ptr_a = &a;
  int *ptr_b = &b;

  if (*ptr_a > *ptr_b) {
    cout << "Наибольшее число: " << *ptr_a ;
  } else {
    cout << "Наибольшее число: " << *ptr_b ;
  }

  return 0;
}
